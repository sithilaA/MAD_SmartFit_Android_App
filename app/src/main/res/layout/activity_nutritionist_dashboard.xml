<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".NutritionistDashboardActivity">

    <!-- User Greeting Section -->
    <LinearLayout
        android:id="@+id/userGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/userGreetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, UserName"
                android:textSize="36sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Letâ€™s check your Appointment"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            tools:srcCompat="@drawable/user_profile" />
    </LinearLayout>

    <!-- Buttons Section -->
    <LinearLayout
        android:id="@+id/buttonsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/userGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- In Pending Appointment Button -->
        <Button
            android:id="@+id/btnPendingAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Pending Appointment"
            android:textSize="24sp"
            android:backgroundTint="@color/buttonColor"
            android:layout_marginBottom="16dp"
            app:layout_constraintWidth_percent="0"
            android:onClick="onPendingAppointmentClick"/>

        <!-- Today Appointment Button -->
        <Button
            android:id="@+id/btnTodayAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today Appointment"
            android:textSize="24sp"
            android:backgroundTint="@color/buttonColor"
            app:layout_constraintWidth_percent="0"
            android:onClick="onTodayAppointmentClick"/>
    </LinearLayout>

    <!-- News Feed Section -->
    <HorizontalScrollView
        android:id="@+id/newsFeedSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonsSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="News Feed"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/titleColor"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- News Item 1 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/finished_workouts_shape"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Headlines Today"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Read More"
                        android:textColor="#0077B6" />
                </LinearLayout>

                <!-- News Item 2 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/finished_workouts_shape"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Headlines Today"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Read More"
                        android:textColor="#0077B6" />
                </LinearLayout>

                <!-- News Item 3 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/finished_workouts_shape"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Headlines Today"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Read More"
                        android:textColor="#0077B6" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="center"
        android:background="#90E0EF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/home_svg"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnNutrition"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginLeft="40sp"
            android:background="@drawable/nutrition_svg"
            tools:ignore="SpeakableTextPresentCheck"
            android:onClick="onNutritionClick"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/setting_svg"
            android:layout_marginLeft="40sp"
            tools:ignore="SpeakableTextPresentCheck"
            android:onClick="onSettingsClick"
             />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>