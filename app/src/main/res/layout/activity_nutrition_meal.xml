<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".NutritionMealActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Meal"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/titleColor"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/addNewMealButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Meal"
            android:backgroundTint="@color/buttonColor"
            android:textSize="24sp"
            android:onClick="onAddNewMealClick"/>

        <Button
            android:id="@+id/addMealToUserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Meal to user"
            android:backgroundTint="@color/buttonColor"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:onClick="onAddNewMealToUserClick"/>

    </LinearLayout>

    <!-- Meal Cards Container -->
    <LinearLayout
        android:id="@+id/mealCardsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <!-- First Meal Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_margin="20sp"
            android:background="@color/cardColor"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Milk rice"
                android:textSize="26sp"
                android:layout_margin="10sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp" />

            <ImageView
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_gravity="right"
                android:background="@drawable/meal_01"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <!-- Second Meal Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_margin="20sp"
            android:background="@color/cardColor"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Chicken biryani"
                android:textSize="26sp"
                android:layout_margin="10sp"
                android:textStyle="bold"
                android:layout_marginLeft="10sp" />

            <ImageView
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_gravity="right"
                android:background="@drawable/meal_02"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:gravity="center"
        android:background="#90E0EF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/home_svg"
            tools:ignore="SpeakableTextPresentCheck"
            android:onClick="onHomeClick"/>

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginLeft="40sp"
            android:background="@drawable/nutrition_svg"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/setting_svg"
            android:layout_marginLeft="40sp"
            tools:ignore="OnClick,SpeakableTextPresentCheck"
            android:onClick="onSettingsClick"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>