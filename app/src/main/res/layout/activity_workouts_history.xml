<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutsHistoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#CAF0F8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="66sp"
                android:layout_height="66sp"
                android:layout_margin="10sp"
                android:background="@drawable/baseline_arrow_back_24"
                tools:ignore="SpeakableTextPresentCheck"></ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workouts History"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#0096c7"
                android:layout_margin="10sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:background="@drawable/finished_workouts_shape"
                android:layout_margin="10sp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00/00/0000"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="26sp">
                </TextView>
            </LinearLayout>
            <Button
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:backgroundTint="#00B4D8"
                android:text="Select Date"
                android:textSize="18sp">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="350sp"
                android:layout_height="150sp"
                android:layout_margin="20sp"
                android:background="@drawable/finished_workouts_shape"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workout 01"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10sp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Duration 00.00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_margin="10sp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="76sp"
                        android:layout_height="76sp"
                        android:background="@drawable/burn_fire_svg"
                        android:layout_margin="10sp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00 Cal Burn"
                        android:layout_marginLeft="20px"
                        android:textStyle="bold"
                        android:textSize="16sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="350sp"
                android:layout_height="150sp"
                android:layout_margin="20sp"
                android:background="@drawable/finished_workouts_shape"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Workout 01"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10sp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Duration 00.00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_margin="10sp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="76sp"
                        android:layout_height="76sp"
                        android:background="@drawable/burn_fire_svg"
                        android:layout_margin="10sp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00 Cal Burn"
                        android:layout_marginLeft="20px"
                        android:textStyle="bold"
                        android:textSize="16sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="right">

                <ImageButton
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_margin="20sp"
                    android:background="@drawable/progress_report_svg"
                    tools:ignore="SpeakableTextPresentCheck"></ImageButton>

                <ImageButton
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_margin="20sp"
                    android:background="@drawable/body_mass_index_svg"
                    tools:ignore="SpeakableTextPresentCheck"></ImageButton>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>